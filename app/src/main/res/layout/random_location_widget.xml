<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/stranger_black"
    android:padding="@dimen/widget_margin"
    android:theme="@style/ThemeOverlay.StrangerThings.AppWidgetContainer">

    <ImageView
        android:id="@+id/imageViewLocation"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        app:srcCompat="@drawable/st_geoicon" />

    <TextView
        android:id="@+id/textViewLocation"
        style="@style/redText"
        android:layout_width="283dp"
        android:layout_height="47dp"
        android:layout_below="@+id/imageViewLocation"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textSize="18sp" />

    <Button
        android:id="@+id/buttonRefresh"
        style="@style/buttonSearch"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:layout_below="@+id/textViewLocation"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginBottom="25dp"
        android:text="@string/refresh" />

</RelativeLayout>